
   server {
      listen 80;
      listen 443;
      server_name <%= domain %>;
      ssl on;
      ssl_certificate     <%= "#{shared_path}/ssl/ssl.crt" %>;
      ssl_certificate_key <%= "#{shared_path}/ssl/ssl.key" %>;

      root <%= "#{current_path}/public" %>;      
      #try_files /system/maintenance.html $uri $uri/index.html $uri.html @app;
      index index.html;
      passenger_enabled on;
   }
